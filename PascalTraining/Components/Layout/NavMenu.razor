@using Microsoft.Extensions.Localization
@using System.Globalization;

@rendermode InteractiveServer

@inject IStringLocalizer<SharedResource> Localizer
@inject NavigationManager Navigation

<div class="top-row ps-5 navbar navbar-dark">
    <div class="container-fluid">
        <div>
            <a class="navbar-brand" href="">Pascal Training</a>
            <br />
            <button class="btn btn-primary btn-sm" @onclick='() => SetLanguage("fr")'>fr</button>
            <button class="btn btn-primary btn-sm" @onclick='() => SetLanguage("en")'>en</button>
            <br />
        </div>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> @Localizer["Readme"]
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="vocabulary">
                @Localizer["Vocabulary"]
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="installationvs2022">
                @Localizer["InstallationVS2022"]
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="azuredbsetup">
                @Localizer["AzureDatabaseSetup"]
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="azuredbauthsetup">
                @Localizer["AzureDatabaseAuthenticationSetup"]
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="createblazorwebapp">
                @Localizer["BlazorWebApp"]
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="localize">
                @Localizer["LocalizeAnApp"]
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="typescriptfrontend">
                @Localizer["TypescriptFrontEnd"]
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private void SetLanguage(string culture)
    {
        var defaultCulture = new CultureInfo($"{culture}");
        CultureInfo.DefaultThreadCurrentCulture = defaultCulture;
        CultureInfo.DefaultThreadCurrentUICulture = defaultCulture;
        Navigation.NavigateTo(Navigation.Uri, forceLoad: true); // Reload the current page
    }
}